<div class="container p-4">
    <div class="row">
        {{!--  listar tabla con each, links lo extraemos desde el render router/links  --}}
        {{#each links}}
            <div class="col-md-3 m-2">
                <div class="card text-center">
                    <div class="card-body-">
                        <a href="{{url}}" target="_blank" >
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2">{{description}}</p>
                        <p>{{ timeago created_at }}</p>
                        {{!--  buttons  --}}
                        <a href="links/delete/{{id}}" class="btn btn-danger">Delete</a>
                        <a href="" class="btn btn-secundary">Edit</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>NO HAY NADA QUE MOSTRAR</p>
                    <a href="/links/add" class="btn btn-success">Regresar</a>
                </div>
            </div>    
        {{/each}}
    </div>
</div>